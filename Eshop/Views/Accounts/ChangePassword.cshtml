@model Eshop.ViewModel.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                <form asp-controller="Accounts" asp-action="ChangePassword" class="card login-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card-body">
                        <div class="title">
                            <h3>Change Password</h3>
                        </div>
                        <div class="form-group input-group">
                            <label asp-for="CurrentPassword" class="control-label"></label>
                            <input asp-for="CurrentPassword" class="form-control" required>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group input-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" id="reg-pass" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group input-group">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="button">
                            <button class="btn" type="submit">Update</button>
                        </div>
                    </div>
                </form>
                <hr />

                <a asp-action="MyAccount" asp-controller="Accounts" class="btn btn-block btn-primary"><i class="fas fa-arrow-left" style="margin-right:10px;"></i>Quay lại</a>
            </div>
        </div>
    </div>
</div>