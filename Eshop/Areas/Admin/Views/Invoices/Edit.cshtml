@model Eshop.Models.Invoice

@{
    ViewData["Title"] = "Thay đổi trạng thái đơn hàng #" + Model.Id;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-cols-lg-2" style="margin: 20px;">
    <form asp-action="Edit" asp-controller="Invoices">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="AccountId" />
        <input type="hidden" asp-for="IssuedDate" />

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="AccountId" class="control-label">Chủ đơn</label>
                <select disabled asp-for="AccountId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="IssuedDate" class="control-label"></label>
                <input disabled asp-for="IssuedDate" class="form-control" />
                <span asp-validation-for="IssuedDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShippingAddress" class="control-label"></label>
            <input asp-for="ShippingAddress" class="form-control" />
            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShippingPhone" class="control-label"></label>
            <input asp-for="ShippingPhone" class="form-control" />
            <span asp-validation-for="ShippingPhone" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            @if (Model.Status)
            {
                <div class="switch m-r-10">
                    <input type="checkbox" asp-for="Status" checked="" />
                    <label for="Status"></label>
                </div>
            }
            else
            {
                <div class="switch m-r-10">
                    <input type="checkbox" asp-for="Status" />
                    <label for="Status"></label>
                </div>
            }
            <label>Đã duyệt</label>
        </div>
        <div class="form-group">
            <label asp-for="Total" class="control-label"></label>
            <input asp-for="Total" class="form-control" />
            <span asp-validation-for="Total" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a asp-action="DSHDChuaDuyet" class="btn btn-outline-secondary" style="margin-right:20px;">Back to List</a>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}