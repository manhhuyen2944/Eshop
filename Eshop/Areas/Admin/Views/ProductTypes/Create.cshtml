@{
}
@model Eshop.Models.ProductType

@{
    ViewData["Title"] = "Thêm danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row-cols-lg-2" style="margin: 20px;">
    <form asp-controller="ProductTypes" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group d-flex align-items-center">
            <div class="switch m-r-10">
                <input type="checkbox" asp-for="Status" checked="" />
                <label for="IsPublished"></label>
            </div>
            <label>Còn hiệu lực</label>
        </div>
        <div class="form-group">
            <a asp-action="Index" class="btn btn-outline-secondary" style="margin-right:20px;">Back to List</a>
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>